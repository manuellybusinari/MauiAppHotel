<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Padding="10">
        <Label 
            Text="Cálculo da Diária"
            FontFamily="OswaldBold"
            FontSize="45"
            TextColor="{StaticResource DarkOliveGreen}">
            <Label.Shadow>
                <!-- Borda/Sombra-->
                <Shadow Brush="{StaticResource Black}" Offset="0,0" Radius="1"/>
            </Label.Shadow>
        </Label>

        <Frame Padding="10"
               CornerRadius="10"
               BorderColor="{StaticResource DarkOliveGreen}"
               Background="{StaticResource White}">

            <VerticalStackLayout>

                <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, *, 2*"
                      ColumnSpacing="10"
                      RowSpacing="10"
                      Padding="5,10"
                      Background="{StaticResource White}">
                    
                    <!-- Adultos-->
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos:"
                           TextColor="{StaticResource Black}"/>

                    <Label Grid.Row="0" Grid.Column="1" TextColor="{StaticResource DarkOliveGreen}"
                           FontAttributes="Bold"                           
                           Text="{Binding Value}" 
                           BindingContext="{Reference stp_adultos}"/>

                    <Stepper Grid.Row="0" Grid.Column="2" BackgroundColor="{StaticResource White}"                                                      
                             x:Name="stp_adultos"
                             Minimum="0" Maximum="10"
                             Increment="1"/>
                    
                    <!-- Crianças -->
                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Crianças:" TextColor="{StaticResource Black}"/>

                    <Label Grid.Row="1" Grid.Column="1" TextColor="{StaticResource DarkOliveGreen}"
                           FontAttributes="Bold"
                           Text="{Binding Value}" 
                           BindingContext="{x:Reference stp_criancas}"/>

                    <Stepper Grid.Row="1" Grid.Column="2" BackgroundColor="{StaticResource White}"                            
                             x:Name="stp_criancas"
                             Minimum="0" Maximum="10"
                             Increment="1" />
                </Grid>
                <Label
                    Text="Escolha sua suíte"
                    HorizontalOptions="Center"
                    Padding="15"
                    FontSize="17"                   
                    FontAttributes="Bold"/> 

                <Picker
                    x:Name="pck_quarto"
                    FontSize="13"
                    Title="Selecione sua acomodação" />
                            
                    <!-- Período estadia -->
                <Frame Padding="10"      
                       Margin="10">
                    
                    <VerticalStackLayout>
                        <Label Text="Período da Estadia" HorizontalOptions="Center"
                               FontAttributes="Bold"
                               Padding="5"
                               />
                        <!-- Checkin -->
                        <HorizontalStackLayout>
                            <Label Text="Chekin:" 
                                   Padding="16"/>
                            <DatePicker x:Name="dtpck_checkin"
                                        Format="dd/MM/yyyy"/>

                        </HorizontalStackLayout>

                        <!-- Check-out -->
                        <HorizontalStackLayout>
                            <Label Text="Chek-out:"
                                   Padding="10"/>
                            <DatePicker x:Name="dtpck_checkout"                                        
                                        Format="dd/MM/yyyy"/>

                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                </Frame>

                <Button Text="Avançar" Clicked="Button_Clicked"
                        Background="{StaticResource DarkOliveGreen}"
                        Padding="10"
                        Margin="5"/>

                <Button Text="Sobre" Clicked="Sobre_Clicked_1"
                        Background="{StaticResource DarkOliveGreen}"
                        Padding="10"
                        Margin="5 "/>

            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>